<switch link:scheme>
  <case rt><ruby><content /><rt><link:path /></rt></ruby></case>
  <case abbr><abbr title="!(link:path)"><content /></abbr></case>
  <case marginnote><label for="!(link:path)" class="margin-toggle">&#8853;</label><input type="checkbox" id="!(link:path)" class="margin-toggle"/><span class="marginnote"><content /></span></case>
  <case newthought><span class="newthought"><content /></span></case>
  <default><a href="!(link:target)"><content /></a></default>
</switch>
